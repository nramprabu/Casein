<h1>Post</h1>

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Title</th>		
		<th>&nbsp;</th>
		<th>&nbsp;</th>
	</tr>
	
<% for post in @posts %>
<tr class="<%= 'even' %> hover">
      <td><%= post.title %></td>
      <td><%= link_to "Show", casein_post_path(post) %></td>
      <td><%= link_to "Edit", edit_casein_post_path(post) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_post_path(post), :method => :delete, :confirm => "Are you sure you want to delete this comment?") %>
			</td>
	</tr>
	<% end %>	
</table>

<p><%= link_to "New Post", new_casein_post_path %></p>
