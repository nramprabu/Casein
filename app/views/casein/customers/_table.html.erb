<!-- Scaffolding generated by Casein v.3.1.11 -->

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Name</th>
		<th>Age</th>
		<th>Date of birth</th>
		<th>Photo</th>
		<th>Is male</th>
		<th>Email</th>
		<th>Phoneno</th>
		<th>Address</th>
		<th>&nbsp;</th>
	</tr>
	
	<% customers.each_with_index do |customer, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= casein_table_cell_link fullname(customer.first_name,customer.last_name), casein_customer_path(customer) %></td>
			<td><%= casein_table_cell_link customer.age, casein_customer_path(customer) %></td>
			<td><%= casein_table_cell_link customer.date_of_birth, casein_customer_path(customer) %></td>
			<td><%= image_tag customer.photo(:thumb) %></td>
			<td><%= casein_table_cell_link customer.is_male, casein_customer_path(customer) %></td>
			<td><%= casein_table_cell_link customer.email, casein_customer_path(customer) %></td>
			<td><%= casein_table_cell_link customer.phoneno, casein_customer_path(customer) %></td>
			<td><%= casein_table_cell_link customer.address, casein_customer_path(customer) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_customer_path(customer), :method => :delete, :confirm => "Are you sure you want to delete this customer?") %>
			</td>
		</tr>
	<% end %>
</table>