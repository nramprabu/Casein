<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Name</th>
		<th>Description</th>
		<th>&nbsp;</th>
	</tr>
	
	<% events.each_with_index do |event, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= casein_table_cell_link event.name, casein_event_path(event) %></td>
			<td><%= casein_table_cell_link event.Description, casein_event_path(event) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_event_path(event), :method => :delete, :confirm => "Are you sure you want to delete this event?") %>
			</td>
		</tr>
	<% end %>
</table>