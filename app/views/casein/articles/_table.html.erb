<!-- Scaffolding generated by Casein v.3.1.11 -->
<div id="repl_ele">
<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Name</th>
		<th>Description</th>
		<th>&nbsp;</th>
	</tr>
	
	<% articles.each_with_index do |article, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= casein_table_cell_link article.name, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link article.description, casein_article_path(article) %></td>
			<td><%= casein_table_cell_link "Comments",casein_article_comments_path(article) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_article_path(article), :method => :delete, :confirm => "Are you sure you want to delete this article?",:remote=>true) %>
			</td>
		</tr>
	<% end %>
</table>
</div>