<% if @error_message %>
<%= render :partial => 'casein/products/error_message' %>
<% else %>
<h2>View customer</h2>

<%= form_for @customer, :url => casein_customer_path(@customer) , :html => { :multipart => true } do |f| %>

	<%= render :partial => 'casein/customers/form', :locals => { :f => f } %>
	
	<p class="submits">
	  <%= link_to 'Cancel', casein_customers_path, :class => 'cancel' %> or
		<%= f.submit "Save changes", :class => "update" %>
	</p>

<% end %>

<%= content_for :sidebar do %>
	<li><%= link_to "#{casein_show_icon "table"}Back to list".html_safe, casein_customers_path %></li>
<% end %>
<% end %>

