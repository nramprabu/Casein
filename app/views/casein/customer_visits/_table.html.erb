<!-- Scaffolding generated by Casein v.3.1.11 -->

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Customer</th>
		<th>Product</th>
		<th>Serial no</th>
		<th>Prod color</th>
		<th>Issue type</th>
		<th>Issue title</th>
		<th>Issue details</th>
		<th>&nbsp;</th>
	</tr>
	
	<% customer_visits.each_with_index do |customer_visit, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= casein_table_cell_link customer_visit.customer.name, casein_customer_visit_path(customer_visit) %></td>
			<td><%= casein_table_cell_link customer_visit.product.name, casein_customer_visit_path(customer_visit) %></td>			
			<td><%= casein_table_cell_link customer_visit.serial_no, casein_customer_visit_path(customer_visit) %></td>
			<td><%= casein_table_cell_link customer_visit.prod_color, casein_customer_visit_path(customer_visit) %></td>
			<td><%= casein_table_cell_link customer_visit.issue_type=="1" ? "Hardware" : "Software", casein_customer_visit_path(customer_visit) %></td>
			<td><%= casein_table_cell_link customer_visit.issue_title, casein_customer_visit_path(customer_visit) %></td>
			<td><%= casein_table_cell_link customer_visit.issue_details, casein_customer_visit_path(customer_visit) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_customer_visit_path(customer_visit), :method => :delete, :confirm => "Are you sure you want to delete this customer visit?") %>
			</td>
		</tr>
	<% end %>
</table>