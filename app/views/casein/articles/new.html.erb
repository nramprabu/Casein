<!-- Scaffolding generated by Casein v.3.1.11 -->
<% if flash.now[:warning] %>
	<div id="error_message">
		<%=flash.now[:warning] %>
	</div>
<% end %>

<div id="repl_ele">
<h2>Add a new article</h2>

<%= form_for @article, :url => casein_articles_path do |f| %>
	
	<%= render :partial => 'casein/articles/form', :locals => { :f => f } %>
	
	<p class="submits">
		<%= link_to 'Cancel', casein_articles_path, :class => 'cancel' %> or
		<%= f.submit "Add new article", :class => "update", :id=>"new_art" %>
	</p>

<% end %>

</div>

<%= content_for :sidebar do %>
	<li><%= link_to "#{casein_show_icon "table"}Back to list".html_safe, casein_articles_path %></li>
<% end %>

<%= render :partial => 'casein/articles/spinner' %>