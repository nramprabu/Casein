<!-- Scaffolding generated by Casein v.3.1.11 -->

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Name</th>
		<th>Image</th>
		<th>Description</th>
		<th>Years of launch</th>
		<th>Status</th>
		<th>Category</th>		
		<th>&nbsp;</th>
	</tr>
	
	<% products.each_with_index do |product, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= casein_table_cell_link product.name, casein_product_path(product) %></td>
			<td><%= image_tag product.photo(:thumb) %></td>
			<td><%= casein_table_cell_link product.description, casein_product_path(product) %></td>
			<td><%= casein_table_cell_link product.years_of_launch, casein_product_path(product) %></td>
			<td><%= casein_table_cell_link product.status, casein_product_path(product) %></td>
			<td><%= casein_table_cell_link product.product_category.name, casein_product_path(product) %></td>
			<td><%= casein_table_cell_link image_tag("/casein/images/icons/PurchaseIcon.jpg",:style=>"width: 25px;",:title=>"purchase",:class=>"tooltip"), { :id=>"#{product.id}",:action=> "purchase",:controller=>"casein/products" } %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_product_path(product), :method => :delete, :confirm => "Are you sure you want to delete this product?") %>
			</td>			
		</tr>
	<% end %>
</table>